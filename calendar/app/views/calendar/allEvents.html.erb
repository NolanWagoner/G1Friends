<h1>All Events</h1>
<div class="menu">
<%= render 'menu' %>
</div>


<table>
  <tr>
    <th>Title</th>
    <th>Date</th>
    <th>Start Time</th>
    <th>End Time</th>
    <th>Description</th>
    <th>Show</th>
    <th>Edit</th>
    <th>Delete</th>
  </tr>
  <br>
    <br>

  <% @event.each do |event| %>
    <tr>
      
      
      <td><%= event.title %></td>
      <td><%= event.date.to_s(:short) %></td>
      <td><%= event.try(:time_start).strftime("%H: %M %p") unless event.time_start.nil?%></td>
      <td><%= event.try(:time_end).strftime("%H: %M %p") unless event.time_end.nil?%></td>
      <td><%= event.description %></td>
      <td><%= link_to 'Show', calendar_path(event) %></td>
      <td><%= link_to 'Edit', edit_calendar_path(event) %></td>
      <td><%= link_to 'Delete',
              calendar_path(event),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>