<p id="alert"><%= alert %></p>

<h1>Welcome To Your Calendar</h1>

<h2>Login</h2>

<%= form_tag sessions_path do |form| %>
  <div class="field">
    <%= label_tag :email %><br>
    <%= text_field_tag :email %>
  </div>
  <div class="field">
    <%= label_tag :password %><br>
    <%= password_field_tag :password %>
  </div>
  <div class="actions">
    <%= link_to 'Log In' , calendars_path  %>
    </div>
  
<% end %>